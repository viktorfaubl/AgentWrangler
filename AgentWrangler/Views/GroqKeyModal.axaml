<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AgentWrangler.Views.GroqKeyModal"
        Title="Enter Groq API Key"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Please enter your Groq API Key:"/>
        <TextBox x:Name="ApiKeyBox" Width="350"/>
        <TextBlock x:Name="ErrorText" Foreground="Red" IsVisible="False"/>
        <Button x:Name="SubmitButton" Content="Submit" Width="100" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
